<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.emilia.scrolltamer">

    <application
        android:label="Scroll Tamer"
        android:icon="@android:mipmap/ic_launcher"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">

        <service android:name=".ScrollService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true"
            android:label="Scroll Tamer Service"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.view.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.view.AccessibilityService"
                android:resource="@xml/service_config" />
        </service>

        <activity android:name=".MainActivity"
            android:exported="true"
            android:label="Scroll Tamer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
