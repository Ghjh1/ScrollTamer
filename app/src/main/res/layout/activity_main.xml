<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText android:id="@+id/edit_dist" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Dist (14)" android:inputType="numberDecimal"/>
        <EditText android:id="@+id/edit_time" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:hint="Time (100)" android:inputType="number"/>
    </LinearLayout>

    <ListView 
        android:id="@+id/test_list" 
        android:layout_width="match_parent" 
        android:layout_height="match_parent" />
</LinearLayout>
